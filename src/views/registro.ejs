<%- include('layouts/header') %>

<div class="container mt-4">

  <div class="row">
    <div class="col-12 col-md-4 mx-auto mt-4">
      <form method="post" class="bg-primary p-3">
        <legend class="text-center">Registrate en Pizzarra</legend>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label text-uppercase text-white"
            >Username</label
          >
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            autocomplete="false"
          />
          
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label text-uppercase text-white">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label text-uppercase text-white">Repetir Password</label>
          <input
            type="password"
            class="form-control"
            id="passwordr"
            name="passwordr"
          />
        </div>
        
        <button type="submit" class="btn btn-light text-uppercase d-flex mx-auto">Registrar</button>
      </form>
    </div>
  </div>
</div>
<%- include('layouts/footer') %>
