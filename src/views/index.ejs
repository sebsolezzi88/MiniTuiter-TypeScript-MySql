<%- include('layouts/header') %>

    <h1 class="text-center">Pizzarra</h1>
    
      <div class="row">
    
      
 

    <div class="col-12 col-md-6 mx-auto mt-4">
        <% if(session.error){ %>
        <div class="alert alert-dismissible alert-danger fade show" role="alert">
          <%= session.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
     
      <% if (tuits && tuits.length > 0) { %>
          <ul class="list-group">
      <% tuits.forEach(tuit => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= tuit.contenido %></strong><br>
          <small class="text-muted">Publicado el <%= new Date(tuit.createdAt).toLocaleString() %></small>
          <small class="text-primary fw-bold">Por:  <%= tuit.usuario.username %></small>
        </div>
       
      </li>
    <% }); %>
  </ul>
    <% } else { %>
    
    <% } %>

    </div>
  </div>
</div>
<%- include('layouts/footer') %>
